#include <iostream>

using namespace std;

int main() 
  {
    int n;
    long double factorial = 1.0;

    cout << "Enter any positive integer: ";
    cin >> n;

    if(n < 0)
        cout << "Error! Wait, Factorial of a negative number doesn't exist.";
    else 
      {
        for(int i = 1; i <= n; ++i) 
            factorial *= i;
        cout << "Factorial of " << n << " = " << factorial;    
      }

 return 0;
}
